<% i18n_scope = [:views, :welcome, :index] %>
<% title t(:title, scope: i18n_scope) %>

<div class='jumbotron'>
  <div class='row'>
    <div class='col-md-9'>
      <h1><%= t('jumbotron.header', site_name: t('views.site_name'), scope: i18n_scope) %></h1></br>
      <p><%= t('jumbotron.description', scope: i18n_scope) %></p></br>
      <p><%= link_to(t('views.orders.new.title'), new_order_path, class: 'btn btn-primary btn-lg', role: 'button') %></p>
    </div>
    <div class='col-md-3'>
      <%= image_tag('sketch.png', class: 'img-thumbnail') %>
    </div>
  </div>

</div>
